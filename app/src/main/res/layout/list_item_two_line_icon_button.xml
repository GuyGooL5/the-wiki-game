<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="twoLineIconButtonModel"
            type="com.oog.thewikigame.models.TwoLineIconButtonModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp">

        <TextView
            android:id="@+id/list_item_two_line_icon_button_primary_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_toStartOf="@id/list_item_two_line_icon_button_id"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:text="@{twoLineIconButtonModel.primaryText}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

        <TextView
            android:id="@+id/list_item_two_line_icon_button_secondary_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_two_line_icon_button_primary_text_id"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/list_item_two_line_icon_button_id"
            android:maxLines="2"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="@{twoLineIconButtonModel.secondaryText}"
            android:textAppearance="?attr/textAppearanceBody2" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/list_item_two_line_icon_button_id"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_alignBottom="@id/list_item_two_line_icon_button_secondary_text_id"
            android:layout_marginEnd="16dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:onClick="@{()->twoLineIconButtonModel.onClickIcon()}"
            android:padding="0dp"
            app:cornerRadius="24dp"
            app:icon="@{twoLineIconButtonModel.icon}"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp" />
    </RelativeLayout>
</layout>
