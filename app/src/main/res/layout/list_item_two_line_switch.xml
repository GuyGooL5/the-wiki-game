<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="twoLineSwitchModel"
            type="com.oog.thewikigame.models.TwoLineSwitchModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp">

        <TextView
            android:id="@+id/list_item_two_line_switch_primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/list_item_two_line_switch_switch"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:text="@{twoLineSwitchModel.primaryText}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

        <TextView
            android:id="@+id/list_item_two_line_switch_secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_two_line_switch_primary_text"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/list_item_two_line_switch_switch"
            android:maxLines="2"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="@{twoLineSwitchModel.secondaryText}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/list_item_two_line_switch_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="@={twoLineSwitchModel.checked}"
            android:onClick="@{()->twoLineSwitchModel.onToggle(twoLineSwitchModel.checked)}"
            android:paddingStart="8dp"
            android:paddingEnd="16dp" />
    </RelativeLayout>
</layout>
