<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialAlertDialog.Danger" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog.Danger</item>
    </style>


    <style name="Widget.MaterialComponents.Button.TextButton.Danger" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/danger</item>
        <item name="rippleColor">@color/dangerRipple</item>
    </style>
    <style name="Widget.MaterialComponents.Button.TextButton.Dialog.Danger" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/danger</item>
        <item name="rippleColor">@color/dangerRipple</item>
    </style>

</resources>